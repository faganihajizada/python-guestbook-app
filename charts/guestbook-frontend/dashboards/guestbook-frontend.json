{
  "annotations": {
    "list": []
  },
  "editable": true,
  "graphTooltip": 0,
  "title": "Guestbook Frontend",
  "uid": "guestbook-frontend-dashboard",
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage per Pod (%)",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\",pod=~\"guestbook-frontend.*\"}[5m])) by (pod) * 100",
          "refId": "A",
          "legendFormat": "{{pod}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    },
    {
      "id": 2,
      "title": "Memory Usage per Pod (MB)",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{container!=\"POD\",container!=\"\",pod=~\"guestbook-frontend.*\"}) by (pod) / 1024 / 1024",
          "refId": "A",
          "legendFormat": "{{pod}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
