{
    "annotations": {
      "list": []
    },
    "editable": true,
    "graphTooltip": 0,
    "title": "Guestbook Backend",
    "uid": "guestbook-backend-simple",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage per Pod (%)",
        "type": "timeseries",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\",pod=~\"guestbook-backend.*\"}[5m])) by (pod) * 100",
            "refId": "A",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "showLast": true
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 50 },
                { "color": "red", "value": 80 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Memory Usage per Pod (MB)",
        "type": "timeseries",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{container!=\"POD\",container!=\"\",pod=~\"guestbook-backend.*\"}) by (pod) / 1024 / 1024",
            "refId": "A",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "showLast": true
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "megabytes",
            "min": 0,
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 500 },
                { "color": "red", "value": 1000 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Pod Status",
        "type": "timeseries",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{pod=~\"guestbook-backend.*\"}) by (phase)",
            "refId": "A",
            "legendFormat": "{{phase}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Container Restarts",
        "type": "timeseries",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_restarts_total{pod=~\"guestbook-backend.*\"}) by (pod)",
            "refId": "A",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Network I/O",
        "type": "timeseries",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{pod=~\"guestbook-backend.*\"}[5m])) by (pod)",
            "refId": "A",
            "legendFormat": "{{pod}} Received"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{pod=~\"guestbook-backend.*\"}[5m])) by (pod)",
            "refId": "B",
            "legendFormat": "{{pod}} Transmitted"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0
          }
        }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 38,
    "time": {
      "from": "now-3h",
      "to": "now"
    },
    "tags": ["kubernetes", "backend", "guestbook"],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "query": "label_values(kube_pod_info{pod=~\"guestbook-backend.*\"}, namespace)",
          "refresh": 2,
          "regex": "",
          "sort": 1,
          "current": {
            "selected": false,
            "text": "default",
            "value": "default"
          }
        },
        {
          "name": "deployment",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "query": "label_values(kube_deployment_status_replicas{namespace=~\"$namespace\", deployment=~\"guestbook-backend.*\"}, deployment)",
          "refresh": 2,
          "regex": "",
          "sort": 1,
          "current": {
            "selected": false,
